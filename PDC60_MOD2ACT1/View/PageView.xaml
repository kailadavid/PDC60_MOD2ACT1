<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC60_MOD2ACT1.View.PageView">
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="Student ID"/>
            <Entry Text="{Binding InfoSet.StudentID}"/>
            <Label Text="Name"/>
            <Entry Text="{Binding InfoSet.Name}"/>
            <Label Text="Course Code"/>
            <Entry Text="{Binding InfoSet.CourseCode}"/>
            <Label Text="Course Title"/>
            <Entry Text="{Binding InfoSet.CourseTitle}"/>
            <Label Text="Number of Units"/>
            <Entry Text="{Binding InfoSet.NumberOfUnits}"/>
            <Label Text="Date of Attendance"/>
            <Entry Text="{Binding InfoSet.DateOfAttendance}"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>